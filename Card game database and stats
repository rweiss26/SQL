/* First I found the average score, maximum score and minimum score of all games played.*/

SELECT AVG(score) AS avg_score, MAX(score) AS max_score, MIN(score) AS min_score
FROM card_games;

/* Then I found out which playes had a total score the was greater than 2,000 points*/

SELECT player_name, SUM(score) AS total_score 
FROM card_games
GROUP BY player_name
HAVING total_score >2000;

/* I then wanted to count the number of times that when a score was greater than 500, 400, 300, and 200, and provide the labels of Ace, King, Queen, 
and Jack respectfully.*/

SELECT COUNT(*),
    CASE
        WHEN score > 500 THEN 'ACE'
        WHEN score > 400 THEN 'KING'
        WHEN score > 300 THEN 'QUEEN'
        WHEN score > 200 THEN 'JACK'
        ELSE 'JOKER'
    END as 'title'
FROM card_games
GROUP BY title;

/* Next I queried which games the player Hopper scored more than 50 points, and how many times for each if those games.*/

SELECT game_name, COUNT(game_name)
FROM card_games
WHERE score > 50 AND player_name = 'Hopper'
GROUP BY game_name;

/*Finally, I counted then number of times Hopper scored over 200 points for each game type.*/

SELECT game_name, COUNT (game_name)
FROM card_games
WHERE score > 200 OR player_name = 'Hopper'
GROUP BY game_name;



